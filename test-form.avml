# Simple Test Form - Proper YAML Format
TestWindow:
  Type: Window
  Title: AVML Test Form
  Width: 400
  Height: 300
  Content:
    MainStack:
      Type: StackPanel
      Orientation: Vertical
      Spacing: 10
      Margin: 20
      Children:
        - WelcomeText:
            Type: TextBlock
            Text: Welcome to AVML!
            FontSize: 18
            FontWeight: Bold
        - SubText:
            Type: TextBlock
            Text: This form was built from YAML
            FontSize: 12
            Foreground: "#666666"
        - NameInput:
            Type: TextBox
            Watermark: Enter your name...
            Width: 300
            Height: 30
        - SubmitButton:
            Type: Button
            Content: Click Me!
            Width: 150
            Height: 35
            HorizontalAlignment: Center
        - AgreeCheck:
            Type: CheckBox
            Content: I agree this is awesome
            IsChecked: true

  BorderThickness = 2
  Padding = 3

@StackPanel ToolboxStack
  Parent = ToolboxBorder

@Border ToolboxTitleBar
  Parent = ToolboxStack
  Background = #66bb6a
  Padding = 10

@TextBlock ToolboxTitle
  Parent = ToolboxTitleBar
  Text = Toolbox
  FontSize = 14
  FontWeight = Bold
  Foreground = White

@ScrollViewer ToolboxScroll
  Parent = ToolboxStack

@StackPanel ToolboxButtons
  Parent = ToolboxScroll
  Margin = 5

@Expander CommonControls
  Parent = ToolboxButtons
  Header = Common Controls
  IsExpanded = True
  Margin = 0,5
  HorizontalAlignment = Stretch

@StackPanel CommonControlsStack
  Parent = CommonControls
  HorizontalAlignment = Stretch

@Expander InputControls
  Parent = ToolboxButtons
  Header = Input Controls

@Border StatusBar
  Parent = RootContainer
  DockPanel.Dock = Bottom
  Background = #1b5e20
  Height = 30

@StackPanel StatusStack
  Parent = StatusBar
  Orientation = Horizontal
  Margin = 8,5,8,5

@TextBlock StatusReady
  Parent = StatusStack
  Text = Ready
  Foreground = White
  Margin = 0,0,15,0
  VerticalAlignment = Center

@TextBlock StatusControl
  Parent = StatusStack
  Text = No selection
  Foreground = White
  Margin = 0,0,15,0
  VerticalAlignment = Center

@TextBlock StatusWindowSize
  Parent = StatusStack
  Text = Window: 1280x720
  Foreground = White
  Margin = 0,0,15,0
  VerticalAlignment = Center

@TextBlock StatusCanvasSize
  Parent = StatusStack
  Text = Canvas: 800x600
  Foreground = White
  VerticalAlignment = Center

@DockPanel DesignerWorkspace
  Parent = RootContainer
  LastChildFill = True

@Border ToolboxBorder
  Parent = DesignerWorkspace
  DockPanel.Dock = Left
  Width = 203
  Background = #c8e6c9
